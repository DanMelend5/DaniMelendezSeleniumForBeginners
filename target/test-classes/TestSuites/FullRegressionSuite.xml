<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Full Regression Suite" verbose="1">
    <test name="Positive Login Tests in Chrome">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="com.practicetestautomation.tests.login.LoginTests">
                <methods>
                    <include name="testLoginFunctionality"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Incorrect Username Test">
        <parameter name="browser" value="firefox"></parameter>
        <parameter name="invalidUsername" value="invalidUsername"></parameter>
        <parameter name="validPassword" value="Password123"></parameter>
        <parameter name="expectedErrorMessage" value="Your username is invalid!"></parameter>
        <classes>
            <class name="com.practicetestautomation.tests.login.LoginTests">
                <methods>
                    <include name="negativeUsernameLoginTest"/>
                </methods>
            </class>
        </classes>
    </test>


    <test name="Incorrect Password Test">
        <parameter name="browser" value="Edge"></parameter>
        <parameter name="validUsername" value="student"></parameter>
        <parameter name="invalidPassword" value="incorrectPassword"></parameter>
        <parameter name="expectedErrorMessage" value="Your password is invalid!"></parameter>
        <classes>
            <class name="com.practicetestautomation.tests.login.LoginTests">
                <methods>
                    <include name="negativePasswordLoginTest"/>
                </methods>
            </class>
        </classes>
    </test>
    
    
    <test name="Exception Tests">
        <parameter name="browser" value="Chrome"></parameter>
        <classes>
            <class name= "com.practicetestautomation.tests.exceptions.ExceptionsTests">
        </class>

        </classes>
    </test>
</suite>